{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - Register
{% endblock %}

{% block body %}
    <body class="hold-transition dark-mode register-page">
    <div class="register-box">
        <div class="card card-outline card-primary">
            <div class="card-header text-center">
                <a href="" class="h1"><b>We</b>Play</a>
            </div>
            <div class="card-body">
                <p class="login-box-msg">Register a new membership</p>

                {{ form_errors(registrationForm) }}
                {{ form_start(registrationForm) }}
                <div class="input-group mb-3">
                    {{ form_widget(registrationForm.fullName, { 'attr': {'class': 'form-control', 'placeholder': 'Full Name'} }) }}
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-user"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    {{ form_widget(registrationForm.email, { 'attr': {'class': 'form-control', 'placeholder': 'Email'} }) }}
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>


                <div class="input-group mb-3">
                    {{ form_widget(registrationForm.plainPassword.first, { 'attr': {'class': 'form-control','placeholder':'Your Password'} }) }}
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    {{ form_widget(registrationForm.plainPassword.second, { 'attr': {'class': 'form-control','placeholder':'Retype Password'} }) }}
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    {{ form_widget(registrationForm.game, { 'attr': {'class': 'form-control', 'placeholder': 'Your Address'} }) }}
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-address-card"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="custom-file">
                            {{ form_widget(registrationForm.image, { 'attr': {'class': 'custom-file-input', 'placeholder': 'Your Image'} }) }}
                            {{ form_label(registrationForm.image, 'Your Image', { 'label_attr': {'class': 'custom-file-label'} }) }}
                        </div>
                    </div>
                </div>
                    <div class="row">
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary btn-block">Register</button>
                        </div>
                        <!-- /.col -->
                    </div>
                {{ form_end(registrationForm) }}
                <a href="" class="text-center">I already have a membership</a>
            </div>
            <!-- /.form-box -->
        </div><!-- /.card -->
    </div>
    </body>
{% endblock %}