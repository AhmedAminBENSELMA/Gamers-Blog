{% macro game(game) %}
<div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column">
    <div class="card card-widget widget-user shadow">
        <!-- Add the bg color to the header using any of the bg-* classes -->
        <div class="widget-user-header bg-info">
            <h3 class="widget-user-desc">{{ game.name }}</h3>
        </div>
        <div class="widget-user-image">
            <img class="img-circle elevation-2" src="{{ asset(game.getImagePath()) }}" alt="User Avatar">
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-sm-4 ">
                    <div class="description-block">
                        <h5 class="description-header"></h5>
                        <span class="description-text"></span>
                    </div>
                    <!-- /.description-block -->
                </div>


            </div>


            <!-- /.row -->
        </div>
        <div class="text-right">
            <a type="submit" class="btn btn-danger" href="{{ path('app_delete', {'id':game.id }) }}"> <i class="bi bi-trash"></i> Delete</a>
        </div>

    </div>

</div>
{% endmacro %}