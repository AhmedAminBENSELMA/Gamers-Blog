{%  macro comment(comment) %}    <div class="card-comment">        <!-- User image -->        <img alt="User Image" class="img-circle img-sm" src="{{ asset(comment.account.getImagePath()) }}">        <div class="comment-text">                    <span class="username">                      {{ comment.account.FullName |capitalize}}                      <span class="text-muted float-right">#######</span>                    </span><!-- /.username -->            {{ comment.commentContext }}        </div>        <!-- /.comment-text -->    </div>{% endmacro %}